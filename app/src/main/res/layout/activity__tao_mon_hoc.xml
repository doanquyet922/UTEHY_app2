<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThemTaiKhoan.Activity_ThemTaiKhoan">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ThemMH__toolbar"
        android:background="#3F51B5"
        app:titleTextColor="#fff"
        />

    

    <EditText
        android:id="@+id/ThemMH_edtTenMH"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:hint="Tên môn học"
        android:paddingLeft="10dp"
        android:textColorHint="#423838"></EditText>

    <Spinner
        android:id="@+id/ThemMH_spnSoTC"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"></Spinner>

    <Button
        android:id="@+id/ThemMH_btnTaoMH"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="#3F51B5"
        android:layout_marginTop="40dp"
        android:textColor="#fff"
        android:text="Tạo môn học"></Button>

</LinearLayout>