<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManHinhChinh.ManHinhChinhActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#0567B0"
        android:orientation="horizontal"
        >
        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_student"
            android:layout_marginTop="38dp"
            android:layout_marginLeft="10dp"></ImageView>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xin chào"
                android:textColor="#FFF"
                android:textSize="20sp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30sp"
                ></TextView>
            <TextView
                android:id="@+id/MHC_tvHoTen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hoàng Việt"
                android:textColor="#FFF"
                android:textSize="20sp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5sp"
                android:textStyle="bold"
                ></TextView>
        </LinearLayout>
        <ImageView
            android:id="@+id/MHC_imgCaiDat"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_setting2"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="140dp"
            ></ImageView>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="125dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="9dp"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="142dp"
        android:layout_marginEnd="9dp"
        android:layout_marginRight="9dp"
        android:layout_marginBottom="493dp"
        android:background="@drawable/botron">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/MHC_imgBangTin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_bangtin"></ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bảng tin"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="-5dp"
                    android:textColor="#000"
                    android:textStyle="bold"></TextView>
            </LinearLayout>

            //lịch học
            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/MHC_imgLichHoc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_lichhoc"></ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lịch học"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="-5dp"
                    android:textColor="#000"
                    android:textStyle="bold"></TextView>
            </LinearLayout>

            //lịch thi
            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/MHC_imgLichThi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_lichthi"></ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lịch thi"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="-5dp"
                    android:textColor="#000"
                    android:textStyle="bold"></TextView>
            </LinearLayout>

            //điểm danh
            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/MHC_imgDiemDanh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_diemdanh"></ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Điểm danh"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="-5dp"
                    android:textColor="#000"
                    android:textStyle="bold"></TextView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/MHC_imgHoatDong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_hoatdong"></ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hoạt động"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="-5dp"
                    android:textColor="#000"
                    android:textStyle="bold"></TextView>
            </LinearLayout>

            //lịch học
            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/MHC_imgHocPhi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_hocphi2"></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Học phí"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="-5dp"
                    android:textColor="#000"
                    android:textStyle="bold"></TextView>
            </LinearLayout>

            //lịch thi
            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/MHC_imgThongBao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_cothongbao"></ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thông báo"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="-5dp"
                    android:textColor="#000"
                    android:textStyle="bold"></TextView>
            </LinearLayout>

            //điểm danh
            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_marginLeft="7dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_xemthem"></ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xem thêm"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="8dp"
                    android:textColor="#000"
                    android:textStyle="bold"></TextView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="477dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LỊCH HỌC HÔM NAY"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#000"
                android:layout_marginLeft="10dp"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hôm nay bạn không có buổi học nào"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"></TextView>

            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MÔN HỌC ĐÃ VẮNG TRONG KÌ"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#000"
                android:layout_marginLeft="10dp"></TextView>

            <ListView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="250dp"></ListView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TIN TỨC UTEHY"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:layout_marginLeft="10dp"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xem thêm"
                    android:textSize="15sp"
                    android:layout_marginLeft="180dp"
                    android:layout_marginTop="13dp"
                    ></TextView>
            </LinearLayout>

            <GridView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:numColumns="2"
                ></GridView>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>