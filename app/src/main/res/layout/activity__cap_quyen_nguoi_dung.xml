<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuanTriAll.Activity_CapQuyenNguoiDung">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/CapQuyen_toolbar"/>
    <ImageView
        android:id="@+id/CapQuyen_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_svnam"
        android:layout_marginTop="20dp"></ImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mã sinh viên"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"></TextView>
    <TextView
        android:id="@+id/CapQuyen_tvMaSV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10118456"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mã lớp"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"></TextView>
    <TextView
        android:id="@+id/CapQuyen_tvMaLop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="101185"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Họ tên"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"></TextView>
    <TextView
        android:id="@+id/CapQuyen_tvHoTen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hoàng Việt"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chức vụ"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"></TextView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/CapQuyen_tvChucVu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cán bộ lớp"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#131EEA"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"></TextView>
        <ImageView
            android:id="@+id/CapQuyen_imgDoi"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_doi"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"></ImageView>
    </LinearLayout>

    <Button
        android:id="@+id/CapQuyen_btnLuu"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:background="@drawable/botron_btntttk"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:text="Lưu"
        android:textColor="#fff"></Button>

</LinearLayout>